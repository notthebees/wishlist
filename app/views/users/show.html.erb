<h1><%= @user.first_name %>'s Profile</h1>


<%= link_to "Your Wishes", user_wishes_path(current_user) %>

<h2>Friends</h2>

<ul>
  <% @user.friends.each do |friend| %>
    <li>
      <%= link_to friend.first_name, user_path(friend) %>
    </li>
  <% end %>
</ul>

<% if @user == current_user %>
  <h2>Add a Friend</h2>

  <%= form_with url: add_friend_user_path(@user), method: :post do %>
    <div class="field">
      <%= label_tag :friend_id, "Friend's ID" %>
      <%= text_field_tag :friend_id %>
    </div>

    <div class="actions">
      <%= submit_tag "Add Friend" %>
    </div>
  <% end %>
<% end %>
